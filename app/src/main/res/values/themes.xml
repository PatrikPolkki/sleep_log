<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SleepLog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="chipStyle">@style/Widget.SleepLog.Chip</item>
        <item name="materialButtonStyle">@style/Widget.SleepLog.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.SleepLog.Button.TextButton</item>
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.SleepLog.ExtendedFloatingActionButton
        </item>
    </style>

    <!--Floating action button-->
    <style name="Widget.SleepLog.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <!--Normal button-->
    <style name="Widget.SleepLog.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/font_medium</item>
    </style>

    <!--Text button-->
    <style name="Widget.SleepLog.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textColor">@color/secondary_light</item>
    </style>

    <!--Chip style-->
    <style name="Widget.SleepLog.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_state</item>
        <item name="android:textColor">@color/text_chip_state</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font_thin</item>
        <item name="android:textAppearance">@style/chipText</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <!--Layout with rounded corners-->
    <style name="layout_background_rounded">
        <item name="android:background">@drawable/rounded_background</item>
    </style>

    <!--Layout with light background-->
    <style name="layout_background_light">
        <item name="android:background">@color/primary_light</item>
    </style>

    <!--Layout with dark background-->
    <style name="layout_background_dark">
        <item name="android:background">@color/primary</item>
    </style>

    <!--Application Title-->
    <style name="appTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Application sub content title-->
    <style name="subContentTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Application sub content -->
    <style name="subContent">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/font_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--default text if database is empty-->
    <style name="defaultText">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Recyclerview item title-->
    <style name="SleepItemTitle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Recyclerview item content-->
    <style name="SleepItemContent">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Custom dialog title-->
    <style name="dialogTitle">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/font_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Custom dialog sub titles-->
    <style name="dialogSubTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Custom dialog date-->
    <style name="dialogDate">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/font_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Custom Dialog timepicker-->
    <style name="TimePickerTheme">
        <item name="colorAccent">@color/white</item>
        <!--divider line color-->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/primary_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--Style for for custom dialog to fulfill screen -->
    <style name="Theme.SleepLog.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="chipStyle">@style/Widget.SleepLog.Chip</item>
        <item name="materialButtonStyle">@style/Widget.SleepLog.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.SleepLog.Button.TextButton</item>
    </style>

</resources>